[user]
	name = Ralph Holzmann
	email = ralphholzmann@gmail.com
	email = rholzmann@twitter.com
[github]
  user = ralphholzmann
[alias]
  br = branch
  ci = commit
  co = checkout
  df = diff
  g = grep -I
  lg = log -p
  pb = publish-branch
  pp = !"echo 'Pull'; git pull; echo 'Push'; git push"
  rb = rbranch
  rc = rank-contributors
  rv = review
  sm = show-merges
  st = status
  ksdiff = difftool -y -t Kaleidoscope
  latest = for-each-ref --count=30 --sort=-committerdate refs/heads/ --format='%(refname:short)'
[color]
	ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[merge]
  log = true
	tool = Kaleidoscope
[rerere]
  enabled = 1
[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
  insteadOf = "github:"
[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
  insteadOf = "gist:"
[url "git@heroku.com:"]
  insteadOf = "heroku:"
[difftool "Kaleidoscope"]
[difftool]
[diff]
[diff "exif"]
  textconv = exiftool
[init]
	templatedir = ~/.githooks
[core]
	excludesfile = ~/.gitignore
	editor = vim
  
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
	renames = true
[push]
	default = current
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[mergetool]
	prompt = false
[http]
	postBuffer = 524288000
